###### Platform Defs ######
if (WIN32)
    set(PLATFORM Windows)
    add_compile_definitions(SPARK_PLATFORM_WINDOWS=1)
elseif (UNIX)
    if(APPLE)
        set(PLATFORM Mac)
        add_compile_definitions(SPARK_PLATFORM_MAC=1)
    elseif(${CMAKE_SYSTEM_NAME} MATCHES Android)
        set(PLATFORM Android)
        add_compile_definitions(SPARK_PLATFORM_ANDROID=1)
    else()
        set(PLATFORM Linux)
        add_compile_definitions(SPARK_PLATFORM_LINUX=1)
    endif()
endif()

###### Config Defs ######z`
if(NOT CMAKE_CONFIGURATION_TYPES)
    if(CMAKE_BUILD_TYPE MATCHES Debug)
        add_compile_definitions(SPARK_DEBUG=1)
    elseif(CMAKE_BUILD_TYPE MATCHES RelWithDebInfo)
        if(${DIST_BUILD})
            add_compile_definitions(SPARK_DIST=1)
        else()
            add_compile_definitions(SPARK_RELEASE=1)
        endif()
    endif()
else()
    add_compile_definitions($<$<CONFIG:Debug>:SPARK_DEBUG=1>)
    add_compile_definitions($<$<CONFIG:DebugEditor>:SPARK_DEBUG=1>)
    add_compile_definitions($<$<CONFIG:Release>:SPARK_RELEASE=1>)
    add_compile_definitions($<$<CONFIG:ReleaseEditor>:SPARK_RELEASE=1>)
    add_compile_definitions($<$<CONFIG:Distribution>:SPARK_DIST=1>)
    add_compile_definitions($<$<CONFIG:DistributionEditor>:SPARK_DIST=1>)
endif()

