SSL_FRAGMENT

port(FragUV) in vec2 inUV;
port(FinalFragColor) out vec4 color;

uniform sampler2D Texture;

void main()
{
    float smoothing = 0.05;
    color.rgb = vec3(1, 1, 1);
    color.a   = smoothstep( 0.5 - smoothing,
                            0.5 + smoothing,
                            texture(Texture, inUV).r);
}