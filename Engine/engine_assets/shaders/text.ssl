SSL_FRAGMENT

port(FragUV) in vec2 inUV;
port(FinalFragColor) out vec4 color;

uniform sampler2D Texture;

void main()
{
    float edgeDistance = 0.5;
    float dist = texture(Texture, inUV).r;
    float edgeWidth = 0.7 * length(vec2(dfdx(dist), dfdy(dist)));
    float opacity = smoothstep(edgeDistance - edgeWidth, edgeDistance + edgeWidth, dist);
    color = vec4(1, 1, 1, opacity);
}