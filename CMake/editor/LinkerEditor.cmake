function(link_editor_libs target)
    if(NOT ${target} MATCHES Editor)
        if(CMAKE_CONFIGURATION_TYPES)
            target_link_libraries(${target} $<$<CONFIG:DebugEditor>:Editor>)
            target_link_libraries(${target} $<$<CONFIG:ReleaseEditor>:Editor>)
            target_link_libraries(${target} $<$<CONFIG:DistributionEditor>:Editor>)
        elseif(${USE_EDITOR})
            target_link_libraries(${target} Editor)
        endif()
    endif()
endfunction()